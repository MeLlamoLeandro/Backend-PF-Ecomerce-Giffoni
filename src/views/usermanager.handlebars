<div class="container position-relative">
    <div class="row">
        <div class="col vh-100">
            <h1>Users</h1>
            <div id="allUsers">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Fullname</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{this.full_name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.role}}</td>
                            <td>
                                <button class="btn btn-primary" onclick="editUser('{{this.email}}')">Edit Role</button>
                                <button class="btn btn-danger" onclick="deleteUser('{{this.email}}')">Delete User</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div id="roleUpdate"></div>
        </div>
    </div>
</div>
<script src="/js/userManager.js"></script>